#!/usr/bin/env node
'use strict';

var childProcess = require('child_process'),
    path = require('path');

console.log('----- RUNNING BROWSERIFY NO OPTIMIZE ------');

childProcess.execSync(`browserify ${path.join(__dirname, '..', 'views', 'options', 'client.js')} -o ${path.join(__dirname, '..', 'assets', 'options.js')} -dv`);

console.log('----- FINISHED RUNNING BROWSERIFY NO OPTIMIZE ------');
