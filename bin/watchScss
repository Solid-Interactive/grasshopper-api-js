#!/usr/bin/env node

'use strict';

var globWatcher = require('glob-watcher'),
    childProcess = require('child_process'),
    path = require('path');

console.log('----- WATCHING SCSS ------');

globWatcher([path.join(__dirname, '..', 'lib', 'admin', 'client', 'styles', '**/*.scss')], function() {
    console.log('Recompiling SCSS');
    childProcess.execSync('bin/scss');
    console.log('SCSS Recompiled');
});
